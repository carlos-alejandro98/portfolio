---
import Layout from "../layouts/Layout.astro";
import LinkedInIcon from "../components/icons/LinkedIn.astro";
import GithubIcon from "../components/icons/Github.astro";
import SocialPill from "../components/SocialPill.astro";
import Experience from "../components/Experience.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Briefcase from "../components/icons/Briefcase.astro";
import CodeIcon from "../components/icons/Code.astro";
import Projects from "../components/Projects.astro";
import UserIcon from "../components/icons/User.astro";
import Discord from "../components/Social/Discord.astro";
import LinkedIn from "../components/Social/LinkedIn.astro";
import Github from "../components/Social/Github.astro";
import Mail from "../components/Social/Mail.astro";
---

<Layout
	title="Portfolio de Carlos Abarca - Desarrollador y Programador Web"
	description="Portfolio de Carlos Abarca, desarrollador y programador web. Conoce más sobre mi y mis proyectos."
>
	<main class="text-white px-4">
		<SectionContainer id="inicio" class="py-20 pb-24">
			<div class="flex lg:flex-nowrap flex-wrap">
				<h1 class="text-5xl font-bold pb-4 flex items-center">
					Hola, soy Carlos
				</h1>
				<iframe
					src="https://my.spline.design/untitled-9d3767a4ca5bf4e26aecffda1866ba82/"
					class="rounded"
					width="100%"
					height="450px"></iframe>
			</div>
			<h2 class="text-1xl opacity-80 text-wrap max-w-[700px]">
				<span>+3 años de experiencia.</span>
				<br />
				<span class="opacity-80">Desarrollador Web.</span><br />
				<span class="text-red-100/90">De Chile, Santiago.</span>
			</h2>
			<nav class="flex gap-4 mt-8 flex-wrap">
				<SocialPill
					href="https://www.linkedin.com/in/carlos-abarca-calderon-716432148/"
				>
					<LinkedInIcon class="size-4 md:size-6" />
					LinkedIn
				</SocialPill>
				<SocialPill href="https://github.com/carlos-alejandro98">
					<GithubIcon class="size-4 md:size-6" />
					Github
				</SocialPill>
			</nav>
		</SectionContainer>

		<SectionContainer id="experiencia" class="pb-8">
			<h2 class="text-2xl font-bold pb-6 flex gap-x-3 items-center">
				<Briefcase class="size-4 md:size-6" />
				Experiencia Laboral
			</h2>
			<Experience />
		</SectionContainer>

		<SectionContainer id="proyectos">
			<h2 class="text-2xl font-bold pb-6 flex gap-x-3 items-center">
				<CodeIcon class="size-4 md:size-6" />
				Proyectos
			</h2>
			<Projects />
		</SectionContainer>

		<SectionContainer id="proyectos">
			<h2 class="text-2xl font-bold pb-6 flex gap-x-3 items-center">
				<UserIcon class="size-4 md:size-6" />
				Redes Sociales
			</h2>
			<div class="flex flex-wrap gap-10">
				<div class="light-button discord">
					<Discord />
				</div>
				<div class="light-button linkedin">
					<LinkedIn />
				</div>
				<div class="light-button github">
					<Github />
				</div>
				<div class="light-button correo">
					<Mail />
				</div>
			</div>
		</SectionContainer>
	</main>
</Layout>
