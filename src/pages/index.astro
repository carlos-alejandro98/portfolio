---
import Layout from "../layouts/Layout.astro";
import LinkedIn from "../components/icons/LinkedIn.astro";
import Github from "../components/icons/Github.astro";
import SocialPill from "../components/SocialPill.astro";
import Experience from "../components/Experience.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Briefcase from "../components/icons/Briefcase.astro";
import Code from "../components/icons/Code.astro";
import Projects from "../components/Projects.astro";
---

<Layout
	title="Portfolio de Carlos Abarca - Desarrollador y Programador Web"
	description="Portfolio de Carlos Abarca, desarrollador y programador web. Conoce más sobre mi y mis proyectos."
>
	<main class="text-white px-4">
		<SectionContainer id="inicio" class="py-20 pb-24">
			<img
				class="rounded-full size-12 mb-4"
				src="/yo.webp"
				alt="imagen carlos"
			/>
			<h1 class="text-5xl font-bold pb-4 flex items-center">
				Hey, soy Carlos
				<!--<Badge>25 años</Badge> -->
			</h1>
			<h2 class="text-1xl opacity-80 text-wrap max-w-[700px]">
				<span>+3 años de experiencia.</span>
				<br />
				<span class="opacity-80">Desarrollador Web.</span><br />
				<span class="text-red-100/90">De Chile, Santiago.</span>
			</h2>
			<nav class="flex gap-4 mt-8 flex-wrap">
				<SocialPill
					href="https://www.linkedin.com/in/carlos-abarca-calderon-716432148/"
				>
					<LinkedIn class="size-4 md:size-6" />
					LinkedIn
				</SocialPill>
				<SocialPill href="https://github.com/carlos-alejandro98">
					<Github class="size-4 md:size-6" />
					Github
				</SocialPill>
			</nav>
		</SectionContainer>

		<SectionContainer id="experiencia" class="pb-8">
			<h2 class="text-2xl font-bold pb-6 flex gap-x-3 items-center">
				<Briefcase class="size-4 md:size-6" />
				Experiencia Laboral
			</h2>
			<Experience />
		</SectionContainer>

		<SectionContainer id="proyectos">
			<h2 class="text-2xl font-bold pb-6 flex gap-x-3 items-center">
				<Code class="size-4 md:size-6" />
				Proyectos
			</h2>
			<Projects />
		</SectionContainer>

		
	</main>
</Layout>
