---
const PROJECTS = [
    {
        title: "Project 1",
        description:
            "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec auctor, nisl eu ultricies aliquam, nunc nunc aliquet nunc, vitae aliquam nunc nunc nec nunc. Donec auctor, nisl eu ultricies aliquam, nunc nunc aliquet nunc, vitae aliquam nunc nunc nec nunc.",
        link: "#",
        github: "#",
        image: "/projects/kaufmann.webp",
        tags: ["HTML", "CSS", "JavaScript"],
    },
];
---

{
    PROJECTS.map(({ title, description, tags, image }) => (
        <article>
            <h3 class="text-2xl font-semibold mb-2">{title}</h3>
            <p class="text-lg mb-4 text-pretty">{description}</p>
            <ul class="flex gap-x-2 flex-row">
                {tags.map((tag) => (
                    <li>
                        <span class="flex gap-x-2 rounden-full text-s py-1 px-2">
                            {tag}
                        </span>
                    </li>
                ))}
            </ul>
            <img 
                class="rounded shadow-2xl shadow-white/10 mt-5"
                src={image} 
                alt={title} 
            />
        </article>
    ))
}
