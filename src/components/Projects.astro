---
const projects = [
    {
        title: "Kaufmann",
        description:
            "Pagina web de automotora Kaufmann, realizada en conjunto con la agencia digital 3D.",
        link: "https://kaufmann.cl/",
        image: "/projects/kaufmann.webp",
        tags: ["HTML", "CSS", "JavaScript", "Liferay", "Java"]
    },
    {
        title: "Transbank",
        description: "Transbank es una empresa que provee servicios financieros y de pagos electrÃ³nicos.",
        link: "https://www.publico.transbank.cl",
        image: "/projects/transbank.webp",
        tags: ["HTML", "CSS", "JavaScript", "Liferay", "Java"]
    }
];
---

{
    projects.map(({ title, description, tags, image }) => (
        <article class="mb-10">
            <h3 class="text-2xl font-semibold mb-2">{title}</h3>
            <p class="text-lg mb-4 text-pretty">{description}</p>
            <ul class="flex gap-x-2 flex-row flex-wrap">
                {tags.map((tag) => (
                    <li>
                        <span class="flex gap-x-2 rounden-full text-s py-1 px-2">
                            {tag}
                        </span>
                    </li>
                ))}
            </ul>
            <img 
                class="rounded shadow-2xl shadow-white/10 mt-5"
                src={image} 
                alt={title} 
            />
        </article>
    ))
}
