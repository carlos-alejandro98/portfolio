                    <span class={`grid h-20 w-20 place-items-center rounded-full ${color} transition-all duration-300 group-hover:${color}`}>
                        <img src={image} alt="" class="h-20 w-20 rounded-full" />
                    </span>
                    <div class="space-y-6 pt-5 text-base leading-7 text-gray-600 transition-all duration-300 group-hover:text-white/90">
                        <p>
                            {description}
                        </p>
                    </div>
                    <div class="pt-5 text-base font-semibold leading-7">
                        <p>
                            <a
                                href={link}
                                target="_blank"
                                class={`${text} transition-all duration-300 group-hover:text-white`}
                            >
                                Ver &rarr;
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    ))
}
