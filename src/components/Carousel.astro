---


<div class="logos dark:bg-backgroundCarouselBlack">
    <div class="logos-slide">
        {icons.map((iconItem) => <img loading="lazy" src={ iconItem.icon } />)}
    </div>
</div>

<style is:global>

    @keyframes slide {
        from {
            transform: translateX(0);
        }
        to {
            transform: translateX(-100%);
        }
    }

    .logos {
        overflow: hidden;
        padding: 30px 0;
        white-space: nowrap;
        position: relative;
        backdrop-filter: blur(1px);
        margin-top: 2rem;
    }

    .logos:before,
    .logos:after {
        position: absolute;
        top: 0;
        width: 100%;
        height: 100%;
        content: "";
        z-index: 2;
    }

    .logos:before {
        left: 0;
    }

    .logos:after {
        right: 0;
    }

    .logos:hover .logos-slide {
        animation-play-state: paused;
    }

    .logos-slide {
        display: flex;
        animation: 40s slide infinite linear;
    }

    .logos-slide img {
        height: 50px;
        margin: 0 25px;
    }
</style>
